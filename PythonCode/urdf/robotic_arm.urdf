<?xml version='1.0'?>
<robot name="robotic_arm">

  <!-- Link 0 -->
  <link name="Link 0">
    <visual>
      <origin xyz="0 0 1" rpy="0 0 0" />
      <geometry>
          <cylinder length="2" radius="0.1"/>
      </geometry>
    </visual>
  </link>

  <!-- Link 1 -->
  <link name="Link 1">
    <visual>
      <origin xyz="0 0.5 0" rpy="-1.57 0 0" />
      <geometry>
          <cylinder length="1" radius="0.1" />
      </geometry>
    </visual>
  </link>
  <joint name="joint 1" type="continuous">
    <parent link="Link 0"/>
    <child link="Link 1"/>
    <origin xyz="0 0 2" rpy="0 0 0" /> 
    <axis xyz="1 0 0" />
  </joint>


<!-- Link 2 -->
  <link name="Link 2">
    <visual>
      <origin xyz="0 0 0.5" rpy="0 0 0" />
      <geometry>
          <cylinder length="1" radius="0.1"/>
      </geometry>
    </visual>
  </link>
  <joint name="joint 2" type="continuous">
    <parent link="Link 1"/>
    <child link="Link 2"/>
    <origin xyz="0 1 0" rpy="0 0 0" /> 
    <axis xyz="1 0 0" />
  </joint>


</robot>
